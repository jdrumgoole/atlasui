# MongoDB Atlas Authentication Method
# Options: "api_key" or "service_account" (recommended)
ATLAS_AUTH_METHOD=api_key

# MongoDB Atlas API Credentials - API Key Method (Legacy)
# Get your API keys from: https://cloud.mongodb.com/v2#/account/publicApi
ATLAS_PUBLIC_KEY=your_public_key_here
ATLAS_PRIVATE_KEY=your_private_key_here

# MongoDB Atlas API Credentials - Service Account Method (Recommended)
# Service accounts use OAuth 2.0 Client Credentials flow
# Option 1: Use a credentials file (recommended)
# ATLAS_SERVICE_ACCOUNT_CREDENTIALS_FILE=/path/to/service-account.json

# Option 2: Set credentials directly
# ATLAS_SERVICE_ACCOUNT_ID=your_client_id_here
# ATLAS_SERVICE_ACCOUNT_SECRET=your_client_secret_here

# Atlas API Configuration
ATLAS_BASE_URL=https://cloud.mongodb.com
ATLAS_API_VERSION=v2

# Application Configuration
APP_NAME=AtlasUI
DEBUG=false

# Web Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# API Client Configuration
TIMEOUT=30
MAX_RETRIES=3
